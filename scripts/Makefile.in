all: init.sh new-site new-user-cert

prefix = @prefix@

sedsubst = \
	-e 's,\@prefix\@,@prefix@,g;' \
	-e 's,\@sysconfdir\@,@sysconfdir@,g;' \
	-e 's,\@datadir\@,@datadir@,g;' \
	-e 's,\@localstatedir\@,@localstatedir@,g;' \
	-e 's,\@datarootdir\@,@datarootdir@,g;'

init: init.sh
	sed $(sedsubst) init.sh.in > init.sh
	chmod +x init.sh

new-site: new-site.sh
	sed $(sedsubst) $< > $@
	chmod +x $@

new-user-cert: new-user-cert.sh
	sed $(sedsubst) $< > $@
	chmod +x $@

install:
	install -d @prefix@/lib/dsnp
	install util.php @prefix@/lib/dsnp/util.php
	install new-user-cert @prefix@/lib/dsnp/new-user-cert
